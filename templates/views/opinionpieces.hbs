    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <ol>
          <li><a href="/">Home</a></li>
          <li>Opinion Pieces</li>
        </ol>
        <h2>Opinion Pieces</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop" id="upload" style="display: none;">
          Upload Piece
        </button>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
          aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel" style="color: black;">Upload</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form class="row g-3" action="/documents/opinionpieces" accept-charset="UTF-8" method="POST"
                  enctype="multipart/form-data" id="documentForm">
                  <div class="col-md-12">
                    <label for="inputTitle" class="form-label">Title</label>
                    <input type="text" name="title" class="form-control" id="inputTitle" placeholder="Title" required>
                    <label for="inputDate" class="form-label">Published date</label>
                                        <input type="month" name="date" class="form-control" id="inputDate"
                                            placeholder="date" required>
                  </div>
                  <div class="col-12">
                    <label for="inputAstract" class="form-label">Abstract</label>
                    <textarea type="text" name="abstract" class="form-control" id="inputAstract" placeholder="Abstract"
                      required></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="formFile" class="form-label">Piece</label>
                    <input class="form-control" name="document" type="file" id="formFile" required>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" form="documentForm" class="btn btn-primary">Upload</button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

